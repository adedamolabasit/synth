{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
      "types": ["node"],
    "moduleResolution": "node",
  },
  "include": ["src/**/*", "swagger.ts", "types/swagger-jsdoc.d.ts"],
  "exclude": ["node_modules", "dist"]
}
